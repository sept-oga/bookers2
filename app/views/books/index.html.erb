<div class="container px-5 px-sm-0">
  <div class="row">
    
    <div class="col-md-3">
      <%= form_with model: @user do |f| %>
      <h2>User info</h2>
        <%= image_tag @user.get_profile_image %>
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <%= link_to edit_user_path(current_user), class: "btn btn-outline-secondary btn-block" do %>
          <i class="fa-solid fa-user-gear"></i>
        <% end %>
      <% end %>
      
      <h2>New Book</h2>
      <%= form_with model: @book do |f| %>
        <p>Title</p>
        <%= f.text_field :title %>
        <p>Opinion</p>
        <%= f.text_area :body %>
        <br>
        <input type="submit" value="Create Book" class="btn btn-success">
      <% end %>
    </div>
    
    
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <% @books.each do |book| %>
      <%= form_with model: @user do |f| %>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= image_tag @user.get_profile_image %></td>
              <td><%= link_to book.title, book_path(current_user) %></td>
              <td><%= book.body %></td>
            </tr>
          </tbody>
        </table>
      <% end %>
      <% end %>
    </div>
    
  </div>
</div>
